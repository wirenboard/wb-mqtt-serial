// Configuration options
{
  "debug": false,
  "ports": [
    {
      "path" : "/dev/ttyNSC1",
      "baud_rate": 9600,
      "parity": "N",
      "data_bits": 8,
      "stop_bits": 1,
      "poll_interval": 10,
      "enabled": true,
      "devices" : [
        {
          "name": "PseudoUniel",
          "id": "pseudo_uniel",
          "slave_id": 1,
          "enabled": true,
