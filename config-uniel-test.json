          "channels": [
            {
              "name": "Input 0",
              "reg_type": "input",
              "address": "0x0a"
            },
            {
              "name" : "Relay 1",
              "reg_type": "relay",
              "address": "0x1b"
            },
            {
              "name": "LowThr",
              "reg_type": "param",
              "address": "0x02",
              "type": "range",
              "max": "0xff"
            },
            {
              "name" : "LED 1",
              "reg_type": "brightness",
              "address": "0x141",
              "type": "range",
              "max": "0xff"
            }
          ]
        }
      ]
    }
  ]
}
