{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "port_options": {
      "properties": {
        "baud_rate": {
          "type": "integer",
          "enum": [110, 300, 600, 1200, 2400, 4800, 9600, 19200, 38400, 57600, 115200]
        },
        "parity": {
          "type": "string",
          "enum": ["N", "E", "O"]
        },
        "data_bits": {
          "type": "integer",
          "enum": [5, 6, 7, 8]
        },
        "stop_bits": {
          "type": "integer",
          "enum": [1, 2]
        }
      },
      "required": [
        "baud_rate",
        "parity",
        "data_bits",
        "stop_bits"
      ]
    },
    "request_data": {
      "properties": {
        "properties": {
          "command": {
            "type": "integer",
            "enum": [70, 96]
          },
          "mode": {
            "type": "string",
            "enum": ["all", "start", "next"]
          }
        }
      },
      "required": [
        "command",
        "mode"
      ]
    }
  },
  "allOf": [
    { "$ref" : "#/definitions/port_options" },
    { "$ref" : "#/definitions/request_data" }
  ]
}
