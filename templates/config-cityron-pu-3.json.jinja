{
    "title": "Cityron PU-3",
    "device_type": "cityron_pu-3",
    "group": "g-control-panel",
    "device": {
        "name": "Cityron PU-3",
        "id": "cityron-pu-3",
        "response_timeout_ms": 100,
        "guard_interval_us": 5000,
        "groups": [
            {
                "title": "Parameters",
                "id": "parameters"
            },
            {
                "title": "General",
                "id": "general"
            },
            {
                "title": "Data Storage",
                "id": "data_storage"
            }
        ],
        "parameters": {
            "temperature_setpoint_min": {
                "title": "Minimum Temperature Setpoint",
                "address": 5,
                "reg_type": "holding",
                "format": "s16",
                "scale": 0.1,
                "min": 0,
                "max": 50,
                "default": 5,
                "group": "parameters",
                "order": 1
            },
            "temperature_setpoint_max": {
                "title": "Maximum Temperature Setpoint",
                "address": 6,
                "reg_type": "holding",
                "format": "s16",
                "scale": 0.1,
                "min": 10,
                "max": 100,
                "default": 30,
                "group": "parameters",
                "order": 2
            }
        },
        "channels": [
            {
                "name": "Panel Status",
                "address": 2,
                "reg_type": "holding",
                "type": "switch",
                "format": "u16",
                "group": "parameters"
            },
            {
                "name": "Temperature Setpoint",
                "address": 1,
                "reg_type": "holding",
                "type": "temperature",
                "format": "s16",
                "scale": 0.1,
                "round_to": 0.1,
                "group": "parameters"
            },
            {
                "name": "Main Temperature",
                "address": 0,
                "reg_type": "holding",
                "type": "temperature",
                "format": "s16",
                "scale": 0.1,
                "round_to": 0.1,
                "group": "parameters"
            },
            {
                "name": "Additional Temperature",
                "address": 9,
                "reg_type": "holding",
                "type": "temperature",
                "format": "s16",
                "scale": 0.1,
                "round_to": 0.1,
                "group": "parameters"
            },
            {
                "name": "Humidity",
                "address": 23,
                "reg_type": "holding",
                "type": "rel_humidity",
                "format": "u16",
                "group": "parameters",
                "readonly": true,
                "enabled": false
            },
            {
                "name": "Fan Speed",
                "address": 4,
                "reg_type": "holding",
                "type": "range",
                "format": "u16",
                "group": "parameters",
                "min": 0,
                "max": 5
            },
            {
                "name": "Mode",
                "address": 3,
                "reg_type": "holding",
                "type": "range",
                "format": "u16",
                "group": "parameters",
                "min": 0,
                "max": 3
            },
            {
                "name": "Auto Mode Allowed",
                "address": "17:0:1",
                "reg_type": "holding",
                "type": "switch",
                "format": "u16",
                "group": "parameters"
            },
            {
                "name": "Cooling Allowed",
                "address": "17:1:1",
                "reg_type": "holding",
                "type": "switch",
                "format": "u16",
                "group": "parameters"
            },
            {
                "name": "Heating Allowed",
                "address": "17:2:1",
                "reg_type": "holding",
                "type": "switch",
                "format": "u16",
                "group": "parameters"
            },
            {
                "name": "Ventilation Allowed",
                "address": "17:3:1",
                "reg_type": "holding",
                "type": "switch",
                "format": "u16",
                "group": "parameters"
            },
            {
                "name": "Replace Filter",
                "address": 7,
                "reg_type": "holding",
                "type": "switch",
                "format": "u16",
                "group": "parameters"
            },
            {
                "name": "Alarm Code",
                "address": 8,
                "reg_type": "holding",
                "type": "value",
                "format": "u16",
                "group": "parameters",
                "min": 0,
                "max": 99
            },
            {
                "name": "Hour",
                "address": 20,
                "reg_type": "holding",
                "type": "value",
                "format": "u16",
                "group": "general"
            },
            {
                "name": "Minute",
                "address": 21,
                "reg_type": "holding",
                "type": "value",
                "format": "u16",
                "group": "general"
            },
            {
                "name": "Day Of Week",
                "address": 22,
                "reg_type": "holding",
                "type": "value",
                "format": "u16",
                "group": "general"
            },
            {% for reg in range(300, 310) -%}
            {
                "name": "Register {{reg}}",
                "address": {{reg}},
                "reg_type": "holding",
                "type": "value",
                "format": "s16",
                "group": "data_storage",
                "enabled": false
            },
            {% endfor -%}
            {% for reg in range(400, 410) -%}
            {
                "name": "Register {{reg}}",
                "address": {{reg}},
                "reg_type": "holding",
                "type": "value",
                "format": "u16",
                "group": "data_storage",
                "enabled": false
            }{% if not loop.last %},{% endif %}
            {% endfor -%}
        ],
        "translations": {
            "ru": {
                "Cityron PU-3": "Cityron ПУ-3",
                "Parameters": "Параметры",
                "General": "Общее",
                "Data Storage": "Хранилище данных",
                "Minimum Temperature Setpoint": "Минимальная уставка температуры",
                "Maximum Temperature Setpoint": "Максимальная уставка температуры",
                "Panel Status": "Статус панели",
                "Temperature Setpoint": "Уставка температуры",
                "Main Temperature": "Основная температура",
                "Additional Temperature": "Дополнительная температура",
                "Humidity": "Влажность",
                "Fan Speed": "Скорость вентилятора",
                "Mode": "Режим",
                "Auto Mode Allowed": "Режим авто разрешен",
                "Cooling Allowed": "Охлаждение разрешено",
                "Heating Allowed": "Нагрев разрешен",
                "Ventilation Allowed": "Вентиляция разрешена",
                "Replace Filter": "Заменить фильтр",
                "Alarm Code": "Код ошибки",
                "Hour": "Час",
                "Minute": "Минута",
                "Day Of Week": "День недели",
                {% for reg in range(300, 310) -%}
                "Register {{reg}}": "Регистр {{reg}}",
                {% endfor -%}
                {% for reg in range(400, 410) -%}
                "Register {{reg}}": "Регистр {{reg}}"{% if not loop.last %},{% endif %}
                {% endfor -%}
            }
        }
    }
}