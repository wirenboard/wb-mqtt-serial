    "group": "g-climate-sensor",
    "device": {
        "name": "XY-MD0X",
        "id": "xy-md0x",
        "response_timeout_ms": 200,
        "guard_interval_us": 50000,
        "parameters": [
            {
                "id": "device_id",
                "title": "device_id_title",
                "reg_type": "holding",
                "description": "baud_rate_description",
                "address": "0x101",
                "min": 1,
                "max": 247,
                "default": 1,
                "order": 1
            },
            {
                "id": "baud_rate",
                "title": "baud_rate_title",
                "reg_type": "holding",
                "address": "0x102",
                "enum": [
                    9600,
                    19200,
                    38400,
                    57600,
                    115200
                ],
                "enum_titles": [
                    "9600",
                    "19200",
                    "38400",
                    "57600",
                    "115200"
                ],
                "default": 9600,
                "order": 2
            },
            {
                "id": "temp_correction",
                "title": "temp_correction_title",
                "reg_type": "holding",
                "address": "0x103",
                "min": -10,
                "max": 10,
                "scale": 0.1,
                "default": 0,
                "order": 3
            },
            {
                "id": "humidity_correction",
                "title": "humidity_correction_title",
                "reg_type": "holding",
                "address": "0x104",
                "min": -10,
                "max": 10,
                "scale": 0.1,
                "default": 0,
                "order": 4
            }
        ],
        "channels": [
            {
                "name": "temperature",
                "reg_type": "input",
                "address": 1,
                "type": "value",
                "units": "deg C",
                "format": "u16",
                "scale": 0.1
            },
            {
                "name": "humidity",
                "reg_type": "input",
                "address": 2,
                "type": "value",
                "format": "u16",
                "units": "%, RH",
                "scale": 0.1
            }
        ],
        "translations": {
            "en": {
                "device_id_title": "Device ID",
