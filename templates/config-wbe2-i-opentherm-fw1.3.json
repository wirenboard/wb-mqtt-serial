            {
                "name": "Room Temperature Setpoint",
                "address": 205,
                "reg_type": "holding",
                "type": "value",
                "units": "deg C",
                "format": "u16",
                "min": 0,
                "max": 35,
                "group": "heating_settings",
                "condition": "heating_options==1"
            },
            {
                "name": "Heating Status",
                "reg_type": "holding",
                "address": 205,
                "type": "switch",
                "group": "heating_settings",
                "condition": "heating_options==2"
            },
            {
                "name": "Heating Setpoint",
                "address": 203,
                "reg_type": "holding",
