                "reg_type": "input",
                "type": "temperature",
                "format": "s16",
                "scale": 0.1,
                "offset": -100,
                "group": "boiler_state",
                "enabled": false
            },
            {
                "name": "Hot Water Setpoint Max",
                "address": 212,
                "reg_type": "input",
                "type": "temperature",
                "format": "u16",
                "group": "boiler_state",
                "enabled": false
            },
            {
                "name": "Hot Water Setpoint Min",
                "address": 213,
                "reg_type": "input",
                "type": "temperature",
                "format": "u16",
                "group": "boiler_state",
                "enabled": false
            },
            {
                "name": "Heating Setpoint Max",
                "address": 214,
                "reg_type": "input",
                "type": "temperature",
                "format": "u16",
                "group": "boiler_state",
                "enabled": false
            },
            {
                "name": "Heating Setpoint Min",
                "address": 215,
                "reg_type": "input",
                "type": "temperature",
                "format": "u16",
                "group": "boiler_state",
                "enabled": false
            },
            {
                "name": "Hot Water Setpoint",
                "address": 204,
                "reg_type": "holding",
                "type": "temperature",
                "format": "u16",
                "min": 0,
                "max": 80,
