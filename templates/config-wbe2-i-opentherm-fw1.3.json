            },
            {
                "name": "Invalid Connection",
                "address": 217,
                "reg_type": "input",
                "type": "value",
                "format": "u16",
                "group": "boiler_state"
            },
            {
                "name": "Temperature Sensor Type",
                "address": 207,
                "reg_type": "holding",
                "type": "value",
                "readonly": true,
                "group": "heating_settings",
                "condition": "(heating_options==1)||(heating_options==2)"
            },
            {
                "name": "Heating Setpoint",
                "address": 203,
                "reg_type": "holding",
                "type": "value",
