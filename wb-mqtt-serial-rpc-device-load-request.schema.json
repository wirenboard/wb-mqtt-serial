{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "serial_port_config": {
      "properties": {
        "path": {
          "type": "string"
        },
        "baud_rate": {
          "type": "integer",
          "enum": [110, 300, 600, 1200, 2400, 4800, 9600, 19200, 38400, 57600, 115200]
        },
        "parity": {
          "type": "string",
          "enum": ["N", "E", "O"]
        },
        "data_bits": {
          "type": "integer",
          "enum": [5, 6, 7, 8]
        },
        "stop_bits": {
          "type": "integer",
          "enum": [1, 2]
        }
      },
      "required": [
        "path",
        "baud_rate",
        "parity",
        "data_bits",
        "stop_bits"
      ]
    },
    "tcp_port_config": {
      "properties": {
        "ip": {
          "type": "string",
          "pattern": "^((25[0-5]|(2[0-4]|1\\d|[1-9]|)\\d)(\\.(?!$)|$)){4}$"
        },
        "port": {
          "type": "integer",
          "minimum": 0,
          "maximum": 65535
        },
        "modbus_mode": {
          "type": "string",
          "enum": ["RTU", "TCP"]
        }
      },
      "required": [ "ip", "port" ]
    },
    "timeouts_config": {
      "properties": {
        "response_timeout": {
          "type": "integer",
          "minimum": 0
        },
        "frame_timeout": {
          "type": "integer",
          "minimum": 0
        },
        "total_timeout": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "request_data": {
      "properties": {
        "slave_id": {
          "oneOf": [
            {
              "type": "integer",
              "minimum": 0
            },
            {
              "type": "string",
              "minLength": 1
            }
          ]
        },
        "device_type": {
          "type": "string"
        },
        "channels": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "parameters": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "required": [ "slave_id", "device_type" ]
    }
  },
  "oneOf": [
    {
      "allOf": [
        {
          "oneOf": [
            { "$ref" : "#/definitions/serial_port_config"},
            { "$ref" : "#/definitions/tcp_port_config"}
          ]
        },
        { "$ref" : "#/definitions/timeouts_config" },
        { "$ref" : "#/definitions/request_data" }
      ]
    },
    {
      "type": "object",
      "properties": {
        "device_id": {
          "type": "string",
          "minLength": 1
        },
        "channels": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "parameters": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "required": [ "device_id" ]
    }
  ]
}
