{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",

  "definitions": {
    "slave_id": {
      "properties": {
        "slave_id": {
          "propertyOrder": 2,
          "title": "Slave id of the device",
          "type": "string",
          "pattern": "^(0x[A-Fa-f\\d]+|\\d+|(0x[A-Fa-f\\d]+|\\d+):(0x[A-Fa-f\\d]+|\\d+))$",
          "options": {
            "inputAttributes": {
              "placeholder":  "decimal (e.g. 123) or hex (e.g. 0xAF)"
            },
            "patternmessage": "Should be decimal or hex"
          }
        }
      }
    },
    "slave_id_broadcast": {
      "properties": {
        "slave_id": {
          "propertyOrder": 2,
          "title": "Slave id of the device or broadcast mode",
          "type": "string",
          "pattern": "^(0x[A-Fa-f\\d]+|\\d+)$",
          "options": {
            "show_opt_in": true,
            "wb": {
                "editor_title": "decimal or hex slave id",
                "undefined_title": "broadcast",
                "undefined_message" : "broadcast_description"
            },
            "inputAttributes": {
              "placeholder":  "decimal (e.g. 123) or hex (e.g. 0xAF)"
            },
            "patternmessage": "Should be decimal or hex"
          },
          "format" : "wb-optional"
        }
      }
    },
    "deviceProperties": {
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "Enable device",
          "default": true,
          "format": "checkbox",
          "propertyOrder": 1
        },
        "name" : {
          "type" : "string",
          "title" : "Device name",
          "description" : "Device name to be displayed in UI",
          "minLength" : 1,
          "propertyOrder": 3
        },
        "id": {
          "type": "string",
          "title": "MQTT id of the device",
          "description": "Used as part of the topic",
          "pattern": "^[^$#+\\/\"']+$",
          "options": {
            "patternmessage": "Invalid device ID"
          },
          "propertyOrder": 4
        },
        "read_rate_limit_ms": {
          "type": "integer",
          "title": "Read rate limit (ms)",
          "description" : "read_rate_limit_description",
          "minimum": 0,
          "default": 1000,
          "propertyOrder": 114
        },
        "min_request_interval": {
          "title": "Minimal interval between requests to the devices (ms)",
          "type": "integer",
          "minimum": 0,
          "default": 0,
          "propertyOrder": 10
        },
        "password": {
          "type": "array",
          "title": "Password as a list of bytes",
          "items": { "$ref": "#/definitions/serial_int" },
          "format": "wb-byte-array",
          "propertyOrder": 101
        },
        "access_level": {
          "type": "integer",
          "title": "Access level",
          "minimum": 0,
          "maximum": 2,
          "default": 1,
          "propertyOrder": 102
        },
        "max_reg_hole": {
          "type": "integer",
          "title": "Max dummy read register count",
          "minimum": 0,
          "default": 0,
          "propertyOrder": 103
        },
        "max_bit_hole": {
          "type": "integer",
          "title": "Max dummy read bit count",
          "minimum": 0,
          "default": 0,
          "propertyOrder": 104
        },
        "max_read_registers": {
          "type": "integer",
          "title": "Maximum number of registers in a single bulk read request",
          "minimum": 0,
          "default": 1,
          "propertyOrder": 105
        },
        "min_read_registers": {
          "type": "integer",
          "title": "Minimum number of registers in a single bulk read request",
          "minimum": 0,
          "default": 1,
          "propertyOrder": 106
        },
        "max_write_registers": {
          "type": "integer",
          "title": "Maximum number of registers in a single bulk write request",
          "minimum": 0,
          "default": 1,
          "propertyOrder": 107
        },
        "guard_interval_us": {
          "type": "integer",
          "title": "Additional delay before each writing to port (us)",
          "minimum": 0,
          "default": 0,
          "propertyOrder": 107
        },
        "frame_timeout_ms": {
          "type": "integer",
          "title": "Frame timeout (ms)",
          "description": "frame_timeout_description",
          "minimum": -1,
          "default": 20,
          "propertyOrder": 108
        },
        "force_frame_timeout": {
          "type": "boolean",
          "title": "Force frame timeout",
          "description": "force_frame_timeout_desc",
          "default": false,
          "format": "checkbox",
          "propertyOrder": 109
        },
        "response_timeout_ms": {
          "type": "integer",
          "title": "Response timeout (ms)",
          "description": "response_timeout_description",
          "minimum": -1,
          "default": 500,
          "propertyOrder": 110
        },
        "device_timeout_ms": {
          "type": "integer",
          "title": "Device timeout (ms)",
          "description": "device_timeout_description",
          "minimum": -1,
          "default": 3000,
          "propertyOrder": 111
        },
        "device_max_fail_cycles": {
          "type": "integer",
          "title": "Device max fail cycles",
          "description": "device_max_fail_cycles_desc",
          "minimum": -1,
          "default": 2,
          "propertyOrder": 112
        },
        "max_write_fail_time_s": {
          "type": "integer",
          "title": "Max write fail time (s)",
          "description": "max_write_fail_time_desc",
          "minimum": 0,
          "default": 600,
          "propertyOrder": 113
        }
      }
    },
    "setup_cmd": {
      "type": "object",
      "title": "Setup command",
      "properties": {
        "title": {
          "type": "string",
          "title": "Command name",
          "description": "Used for logging/debugging purposes only",
          "propertyOrder": 1,
          "options": {
            "grid_columns": 4,
            "wb": {
              "show_editor": true,
              "allow_undefined": true
            }
          }
        },
        "address": {
          "title": "Register address",
          "propertyOrder": 2,
          "$ref": "#/definitions/address",
          "format": "wb-int-address",
          "options": {
            "grid_columns": 4
          }
        },
        "value": {
          "title": "Value",
          "propertyOrder": 3,
          "$ref": "#/definitions/serial_int",
          "format": "wb-serial-int",
          "options": {
            "grid_columns": 4
          }
        }
      },
      "required": ["address", "value"]
    },
    "register_channel_common": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "Enabled",
          "default" : true,
          "propertyOrder": 1,
          "format": "checkbox",
          "options": {
            "grid_columns": 12,
            "wb": {
              "show_editor": true,
              "omit_default": true
            }
          }
        },
        "name": {
          "$ref": "#/definitions/channel_name",
          "title": "Name", 
          "propertyOrder": 2,
          "options": {
            "grid_columns": 6
          }
        },
        "id": {
          "$ref": "#/definitions/channel_id",
          "propertyOrder": 3,
          "options": {
            "grid_columns": 6,
            "wb": {
              "show_editor": true,
              "allow_undefined": true
            }
          }
        },
        "type": {
          "$ref": "#/definitions/control_type",
          "title": "Type", 
          "propertyOrder": 6,
          "options": {
            "grid_columns": 3,
            "wb": {
              "show_editor": true,
              "omit_default": true
            }
          }
        },
        "reg_type": {
          "$ref": "#/definitions/reg_type",
          "title": "Register type", 
          "propertyOrder": 7,
          "options": {
            "grid_columns": 3,
            "wb": {
              "show_editor": true,
              "omit_default": true
            }
          }
        },
        "format": {
          "$ref": "#/definitions/format",
          "title": "Format", 
          "propertyOrder": 8,
          "options": {
            "grid_columns": 3,
            "wb": {
              "show_editor": true,
              "omit_default": true
            }
          }
        },
        "units": {
          "type": "string",
          "title": "Units",
          "propertyOrder": 9,
          "options": {
            "grid_columns": 3,
            "wb": {
              "show_editor": true,
              "allow_undefined": true
            }
          }
        },
        "max": {
          "title": "Maximum value",
          "$ref": "#/definitions/serial_num",
          "propertyOrder": 13,
          "format": "wb-serial-number",
          "options": {
            "grid_columns": 3,
            "wb": {
              "show_editor": true,
              "allow_undefined": true
            }
          }
        },
        "scale": {
          "type": "number",
          "title": "Scale (value multiplier)",
          "description": "Value displayed = round((value read * scale) + offset) / round_to) * round_to",
          "default" : 1,
          "propertyOrder": 10,
          "options": {
            "grid_columns": 3,
            "dependencies": {
              "format": ["s16", "u16", "s8", "u8", "s24", "u24", "s32", "u32", "s64", "u64", "bcd8", "bcd16", "bcd24", "bcd32", "float", "double", "char8"]
            },
            "wb": {
              "show_editor": true,
              "omit_default": true
            }
          }
        },
        "offset": {
          "type": "number",
          "title": "Value offset",
          "description": "Value displayed = round((value read * scale) + offset) / round_to) * round_to",
          "default" : 0,
          "propertyOrder": 11,
          "options": {
            "grid_columns": 3,
            "dependencies": {
              "format": ["s16", "u16", "s8", "u8", "s24", "u24", "s32", "u32", "s64", "u64", "bcd8", "bcd16", "bcd24", "bcd32", "float", "double", "char8"]
            },
            "wb": {
              "show_editor": true,
              "omit_default": true
            }
          }
        },
        "round_to": {
          "type": "number",
          "title": "Round to",
          "description": "Value displayed = round((value read * scale) + offset) / round_to) * round_to",
          "default" : 1,
          "propertyOrder": 12,
          "minimum": 0,
          "options": {
            "grid_columns": 3,
            "wb": {
              "show_editor": true,
              "omit_default": true
            }
          }
        },
        "readonly": {
          "title": "Read-only",
          "type": "boolean",
          "default": false,
          "propertyOrder": 14,
          "options": {
            "grid_columns": 12,
            "wb": {
              "show_editor": true,
              "omit_default": true
            }
          }
        },
        "on_value": {
          "title": "'On' value",
          "description": "Value corresponding to the 'On' state of the switch",
          "$ref": "#/definitions/serial_int",
          "propertyOrder": 17,
          "format": "wb-serial-int",
          "options": {
            "grid_columns": 3,
            "wb": {
              "show_editor": true,
              "allow_undefined": true
            }
          }
        },
        "off_value": {
          "title": "'Off' value",
          "description": "Value corresponding to the 'Off' state of the switch",
          "$ref": "#/definitions/serial_int",
          "propertyOrder": 18,
          "format": "wb-serial-int",
          "options": {
            "grid_columns": 3,
            "wb": {
              "show_editor": true,
              "allow_undefined": true
            }
          }
        },
        "read_period_ms": {
          "type": "integer",
          "title": "Read period (ms)",
          "description" : "read_period_description",
          "minimum": 10,
          "options": {
            "grid_columns": 12,
            "inputAttributes": {
              "placeholder": "in queue order"
            },
            "wb": {
              "show_editor": true,
              "allow_undefined": true
            }
          },
          "propertyOrder": 15
        },
        "read_rate_limit_ms": {
          "type": "integer",
          "title": "Read rate limit (ms)",
          "description" : "read_rate_limit_description",
          "minimum": 0,
          "default": 1000,
          "propertyOrder": 16
        },
        "error_value": {
          "title": "Error value",
          "description": "Value which should be treated as read error",
          "propertyOrder": 20,
          "$ref": "#/definitions/serial_int",
          "format": "wb-serial-int",
          "options": {
            "grid_columns": 3,
            "wb": {
              "show_editor": true,
              "allow_undefined": true
            }
          }
        },
        "unsupported_value": {
          "title": "Unsupported register value",
          "description": "Value which should be treated as 'register is unsupported by device'",
          "propertyOrder": 21,
          "type": "string",
          "pattern": "^(0x[A-Fa-f\\d]+)$",
          "options": {
            "grid_columns": 3,
            "inputAttributes": {
              "placeholder":  "hex with prefix '0x'"
            },
            "patternmessage": "Should be hex with prefix '0x'",
            "wb": {
              "show_editor": true,
              "allow_undefined": true
            }
          }
        },
        "word_order": {
          "$ref": "#/definitions/word_order",
          "title": "Word order",
          "propertyOrder": 22,
          "options": {
            "grid_columns": 6,
            "wb": {
              "show_editor": true,
              "omit_default": true
            }
          }
        },
        "byte_order": {
          "$ref": "#/definitions/byte_order",
          "title": "Byte order",
          "propertyOrder": 23,
          "options": {
            "grid_columns": 6,
            "wb": {
              "show_editor": true,
              "omit_default": true
            }
          }
        },
        "string_data_size": {
          "type": "integer",
          "title": "String size in characters",
          "description": "string_data_size_description",
          "minimum": 1,
          "default": 1,
          "propertyOrder": 24,
          "options": {
            "dependencies": {
              "format": "string"
            },
            "wb": {
              "show_editor": true,
              "omit_default": true
            }
          }
        },
        "sporadic": {
          "title": "Dispatched with an event",
          "description": "sporadic_description",
          "type": "boolean",
          "default": false,
          "propertyOrder": 25,
          "options": {
            "grid_columns": 6,
            "wb": {
              "show_editor": true,
              "omit_default": true
            }
          }
        },
        "semi-sporadic": {
          "title": "Dispatched with an event and polling",
          "description": "semi_sporadic_description",
          "type": "boolean",
          "default": false,
          "propertyOrder": 26,
          "options": {
            "grid_columns": 6,
            "wb": {
              "show_editor": true,
              "omit_default": true
            }
          }
        },
        "enum": {
          "title": "List of values",
          "type": "array",
          "items": {
            "oneOf": [
              { "type": "string" },
              { "type": "number" }
            ]
          },
          "propertyOrder": 27
        },
        "enum_titles": {
          "title": "List of value titles",
          "type": "array",
          "items": { "type": "string" },
          "propertyOrder": 28
        },
        "device_type": {
          "not": {},
          "options": { "hidden": true }
        }
      },
      "required": ["name"],
      "format": "grid"
    },
    "registerChannel": {
      "allOf": [
        { "$ref": "#/definitions/register_channel_common"},
        {
          "properties": {
            "address": {
              "$ref": "#/definitions/address",
              "title": "Address",
              "propertyOrder": 4,
              "format": "wb-int-address",
              "options": {
                "grid_columns": 6,
                "wb": {
                  "show_editor": true,
                  "allow_undefined": true
                }
              }
            },
            "write_address": {
              "$ref": "#/definitions/address",
              "title": "Write Address",
              "propertyOrder": 5,
              "format": "wb-int-address",
              "options": {
                "grid_columns": 6,
                "wb": {
                  "show_editor": true,
                  "allow_undefined": true
                }
              }
            }
          }
        }
      ]
    },
    "common_channel": {
        "$ref": "#/definitions/registerChannel"
    },
    "common_channel_modbus": {
      "$ref": "#/definitions/registerChannel"
    },
    "channelSettings": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "Enable poll",
          "default": true,
          "format": "checkbox"
        },
        "read_period_ms": {
          "type": "integer",
          "title": "Read period (ms)",
          "description" : "read_period_description",
          "minimum": 10,
          "options": {
            "enum_values": [ 100, 200 ],
            "inputAttributes": {
              "placeholder": "in queue order"
            },
            "dependencies": {
              "enabled": true
            }
          },
          "format": "edWb",
          "propertyOrder": 3
        },
        "read_rate_limit_ms": {
          "type": "integer",
          "title": "Read rate limit (ms)",
          "description" : "read_rate_limit_description",
          "minimum": 0,
          "default": -1,
          "options": {
            "dependencies": {
              "enabled": true
            }
          },
          "format": "siWb",
          "propertyOrder": 4
        }
      }
    },
    "tableChannelSettings": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "options": {
            "hidden": true
          }
        },
        "title": {
          "title": "Parameter",
          "type": "string",
          "format": "info",
          "propertyOrder": 1
        },
        "mode": {
          "type": "integer",
          "title": "Poll",
          "propertyOrder": 2,
          "default": 1,
          "enum": [0, 1, 2, 3, 4, 5],
          "options": {
            "enum_titles": [
              "do not read",
              "in queue order",
              "200 ms",
              "100 ms",
              "custom period",
              "not faster than (deprecated)"
            ],
            "enum_hidden": [5]
          }
        },
        "period": {
          "type": "integer",
          "title": "Period (ms)",
          "minimum": 0,
          "maximum": 172800000,
          "propertyOrder": 3,
          "default": 1000,
          "options":{
            "dependencies": {
              "mode": [4, 5]
            }
          }
        }
      },
      "required": ["mode", "name"]
    },
    "channel_name": {
      "type": "string",
      "title": "Control name",
      "description": "This name is displayed both in UI and used as part of MQTT topic",
      "pattern": "^[^$#+\\/\"']+$",
      "options": {
        "patternmessage": "Invalid channel name"
      }
    },
    "channel_id": {
      "type": "string",
      "title": "MQTT id of the channel",
      "description": "Used as part of the topic",
      "pattern": "^[^$#+\\/\"']+$",
      "options": {
        "patternmessage": "Invalid channel ID"
      }
    },
    "control_type": {
      "type": "string",
      "title": "Control type",
      "enum": [
        "switch", "wo-switch", "pushbutton", "range", "rgb", "text",
        "value", "temperature", "rel_humidity",
        "atmospheric_pressure", "rainfall", "wind_speed", "power",
        "power_consumption", "voltage", "water_flow",
        "water_consumption", "resistance", "concentration",
        "heat_energy", "heat_power",
        "dimmer", "lux", "pressure", "current", "sound_level"
      ],
      "options" : {
        "enum_titles": [
          "switch",
          "wo-switch",
          "pushbutton",
          "range",
          "rgb",
          "text",
          "value",
          "temperature (deprecated, use value with units)",
          "rel_humidity (deprecated, use value with units)",
          "atmospheric_pressure (deprecated, use value with units)",
          "rainfall (deprecated, use value with units)",
          "wind_speed (deprecated, use value with units)",
          "power (deprecated, use value with units)",
          "power_consumption (deprecated, use value with units)",
          "voltage (deprecated, use value with units)",
          "water_flow (deprecated, use value with units)",
          "water_consumption (deprecated, use value with units)",
          "resistance (deprecated, use value with units)",
          "concentration (deprecated, use value with units)",
          "heat_energy (deprecated, use value with units)",
          "heat_power (deprecated, use value with units)",
          "dimmer (deprecated, use value with units)",
          "lux (deprecated, use value with units)",
          "pressure (deprecated, use value with units)",
          "current (deprecated, use value with units)",
          "sound_level (deprecated, use value with units)"
        ]
      }
    },
    "reg_type": {
      "type": "string",
      "title": "Register type",
      "enum": ["coil", "discrete", "holding", "holding_single", "holding_multi", "input", "direct", "relay", 
               "brightness", "param", "relay_mode", "relay_default", "relay_delay", "energy", "array",
               "param_be", "param_sign_active", "param_sign_reactive", "array12", "default", "param16", 
               "param24", "param32", "power", "freq", "power_factor", "group_single", 
               "temperature", "item_1", "item_2", "item_3", "item_4", "item_5", 
               "alarm", "position", "command", "date", "time", "angle", "type", "status", "zonebit",
               "press_counter",
               // obis_* are deprecated, use item_*, temperature and power_factor
               "obis_cdef", "obis_cdef_pf", "obis_cdef_temp", "obis_cdef_1", "obis_cdef_2", "obis_cdef_3", "obis_cdef_4", "obis_cdef_5"]
    },
    "format": {
      "type": "string",
      "title": "Format",
      "enum": ["s16", "u16", "s8", "u8", "s24", "u24", "s32", "u32", "s64", "u64", "bcd8", "bcd16", "bcd24", "bcd32", "float", "double", "char8", "string", "string8"],
      "options": {
        "enum_titles" : [ "Signed 16-bit integer", "Unsigned 16-bit integer", "Signed 8-bit integer", "Unsigned 8-bit integer",
                          "Signed 24-bit integer", "Unsigned 24-bit integer", "Signed 32-bit integer", "Unsigned 32-bit integer",
                          "Signed 64-bit integer", "Unsigned 64-bit integer",
                          "8-bit BCD", "16-bit BCD","24-bit BCD", "32-bit BCD", "IEEE754 32-bit float", "IEEE754 64-bit float (double)",
                          "8-bit ASCII char", "String", "String"]
      }
    },
    "word_order": {
      "type": "string",
      "title": "16-bit Word Order",
      "enum": ["big_endian", "little_endian"],
      "options": {
        "enum_titles" : [ "Big-endian ([0xAA 0xBB] [0xCC 0xDD] => 0xAABBCCDD)",
                          "Little-endian ([0xAA 0xBB] [0xCC 0xDD] => 0xCCDDAABB)"]
      },
      "default" : "big_endian"
    },
    "byte_order": {
      "type": "string",
      "title": "16-bit Word Byte Order",
      "enum": ["big_endian", "little_endian"],
      "options": {
        "enum_titles" : [ "Big-endian ([0x12 0x34] => 0x1234)",
                          "Little-endian ([0x12 0x34] => 0x3412)"]
      },
      "default" : "big_endian"
    },
    "address": {
      "title": "Address",
      "oneOf": [
        {
          "type": "string",
          "pattern": "^(?:0x[A-Fa-f0-9]+|\\d+)(?::\\d+:\\d+)?$",
          "options": {
            "inputAttributes": {
              "placeholder":  "address:offset:bitwidth"
            },
            "patternmessage": "Address should be decimal or hex, can contain offset and bitwidth separated by ':'"
          }
        },
        {
          "title": "decimal",
          "type": "integer"
        }
      ]
    },
    "serial_int": {
      "oneOf": [
        {
          "title": "decimal or hex",
          "type": "string",
          "pattern": "^(0x[A-Fa-f\\d]+|[-]?\\d+)$",
          "options": {
            "patternmessage": "Should be decimal or hex"
          }
        },
        {
          "title": "decimal",
          "type": "integer"
        }
      ]
    },
    "serial_num": {
      "oneOf": [
        {
